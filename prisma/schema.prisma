generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:ClueForge.sqlite"
}

// Models
model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  password          String
  first_name        String
  last_name         String
  email_verified_at DateTime?
  last_login        DateTime?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  deleted_at        DateTime?
}
